              %ul.nav.pull-right
                %li
                  %a{:href => "#"} Welcome! admin
                %li.divider-vertical
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Setting
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{:href => "#"} Change Password
                    %li
                      %a{:href => "#"} Login History
                    %li.divider
                    %li
                      %a{:href => "#"} Logout
            / /.nav-collapse
        / /navbar-inner
    / - head and navbar
    .navbar
      .navbar-inner
        %a.brand{:href => "/"}= image_tag('logo-trans.png')
      - if !current_page?(staffs_path)
        %ul.breadcrumb
          %li.active
            %i.icon-home.icon-white
            =link_to 'หน้าแรก' , '/'
            %span.divider |
          %li
            %i.icon-wrench
            = link_to 'ค้นหาห้องว่าง', search_path
            %span.divider |
          %li
            %i.icon-wrench
            = link_to 'สำหรับเจ้าหน้าที่', login_path
            %span.divider |
          %li
            %i.icon-plus
            = link_to 'เกี่ยวกับเรา', static_pages_about_path
            %span.divider |
    / - body section
    .container-fluid
      .well
        .row-fluid
          / Sidebar content
          .span3
            %form
              %fieldset
                %legend
                  %i.icon-search
                  Search Room
                %input{:placeholder => "Date…", :type => "text"}
                  %br
                    %input{:placeholder => "Room…", :type => "text"}
                      %br
                        .alert.alert-success{:style => "width:170px;"} Example: วศ.301
                        %button.btn.btn-primary{:type => "button"} Search...
          .span9
            = yield

